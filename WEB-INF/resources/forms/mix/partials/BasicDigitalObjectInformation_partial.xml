<?xml version="1.0" encoding="UTF-8"?>
<!-- Default partial to show mods:identifer --> 
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:xhtml="http://www.w3.org/1999/xhtml"
    xmlns:xforms="http://www.w3.org/2002/xforms" xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xxi="http://orbeon.org/oxf/xml/xinclude"
    xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xxforms="http://orbeon.org/oxf/xml/xforms"
    xmlns:mix="http://www.loc.gov/mix/v20" xmlns:fr="http://orbeon.org/oxf/xml/form-runner"
    xmlns:dl="http://dl.lib.brown.edu/editor/mods/dl" xmlns:xlink="http://www.w3.org/1999/xlink">

    <!-- BEGIN IDENTIFIER -->
    <!-- MODS:IDENTIFIER  -->
    <fr:section id="identifier-section" bind="fr-form-binds">
        <xforms:label ref="$form-resources/detail/titles/identifier"/>
        <xforms:help ref="$form-resources/detail/help/identifier"/>
        <fr:repeat nodeset="mix:BasicDigitalObjectInformation/mix:ObjectIdentifier" id="identifier-repeat"
            origin="xxforms:instance('mix-insert')/insert[@name = 'ObjectIdentifier']/mix:ObjectIdentifier">
            <fr:body>

                <fr:tr>
                    <fr:td>
<!--
                        <xforms:input ref="mix:objectIdentifierType">
                            <xforms:label ref="$form-resources/detail/labels/objectIdentifierType"/>
                            <xforms:alert ref="$form-resources/detail/alerts/objectIdentifierType"/>
                            <xforms:help ref="$form-resources/detail/help/objectIdentifierType"/>
                        </xforms:input>
-->
                        <xforms:select1 ref="mix:objectIdentifierType" class="drop-down">
                            <xforms:label ref="$form-resources/detail/labels/objectIdentifierType"/>
                            <xforms:alert ref="$form-resources/detail/alerts/objectIdentifierType"/>
                            <xforms:help ref="$form-resources/detail/help/objectIdentifierType"/>
                            <xforms:itemset
                                nodeset="$form-resources/lists/objectIdentifierType/instance//(section|item)">
                                <xforms:label ref="label"/>
                                <xforms:value ref="value"/>
                            </xforms:itemset>
                        </xforms:select1>
                    </fr:td>
                    <fr:td>
                        
                        <xforms:input incremental="true" ref="mix:objectIdentifierValue">
                            <xforms:label ref="$form-resources/detail/labels/objectIdentifierValue"/>
                            <xforms:alert ref="$form-resources/detail/alerts/objectIdentifierValue"/>
                            <xforms:help ref="$form-resources/detail/help/objectIdentifierValue"/>
                        </xforms:input>
                        
                    </fr:td>
                </fr:tr>
            </fr:body>
        </fr:repeat>
    </fr:section>
    <!-- END IDENTIFIER -->
</html>
